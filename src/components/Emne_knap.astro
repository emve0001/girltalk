---
const { text } = Astro.props;
---

<button> {text} </button>

<style>
    button{
        background-color: var(--secondary);
        color: var( --primary-text-color);
        font-family: var(--secondary-font);
        font-size: 1.5rem;
        line-height: var(--primary-line-height);
        border-radius: 15px;
        border: none;
        padding: 1rem;
    }
</style>
