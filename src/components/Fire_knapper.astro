---
 import MainLayout from "../MainLayout.astro";
---
<section id="grid_fire-knapper">
    <img src="../../public/img/FAQ.webp" alt="faq knap">
    <img src="../../public/img/PODCAST.webp" alt="podkast knap med mikrofon">
    <img src="../../public/img/Brevkasse.webp" alt="brevkasse knap med brev">
    <img src="../../public/img/faelleskab.webp" alt="fællesskab knap med hjerter der holder i hånden">
</section>

<style>
img{
max-width: 100%;
max-height:100%;
width: auto;
height: auto;
    }

    #grid_fire-knapper{
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 20px;
        max-width: 600px;
        padding-bottom: 120px;
    }
    @media screen and (min-width: 768px) {
        #grid_fire-knapper{
            gap: 40px;
            margin: auto;
        }  
    }

</style>