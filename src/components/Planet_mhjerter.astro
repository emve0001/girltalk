---
 import MainLayout from "../MainLayout.astro";
---
<div class="container">
<div class="hj"> <img src="../../img/hjerter2.webp" alt="hjerter"></div>
<div class="planet"><img src="../../img/planet.webp" alt="planetmhjerter"></div>
</div>

<div><p>Husk på du ikke sidder alene med dine følelser!</p></div>

<div class="streg"><img src="../../img/streg.webp" alt="streg"></div>


<style>
    .container {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr;
    place-items: center;
    padding: 0 20px; 
    margin-top: 70px;
}

.planet {
    grid-area: 2 / 1 / 4 / 2;
    max-width: 40%; 
    margin-bottom: 10px;
    animation: jord-drej 20s linear infinite;
}
@keyframes jord-drej{
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(360deg);
    }
}

.hj {
    grid-area: 1 / 1 / 3 / 2;
    z-index: 1;
    max-width: 30%; 
}

.streg {
    grid-row: 1;
    grid-column: 1;
    max-width: 3%; 
    margin-left: 44.5%;
}

p {
    grid-row: 2;
    grid-column: 1;
    text-align: center; 
}

@media screen and (max-width: 768px) {
    .container {
        grid-template-columns: 1fr; 
    }
    .hj {
     grid-area: 1 / 1 / 3 / 2;
    z-index: 1;
    max-width: 70%; 
}
.planet {
    grid-area: 2 / 1 / 4 / 2;
    max-width: 70%; 
    margin-bottom: 10px;

}
.streg {
    grid-row: 1;
    grid-column: 1;
    max-width: 8%; 
    margin-left: 34%;
}

}
</style>