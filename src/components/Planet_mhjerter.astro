---
 import MainLayout from "../MainLayout.astro";
---
<div class="container">
<div class="hj"> <img src="../../img/hjerter2.webp" alt="hjerter"></div>
<div class="planet"><img src="../../img/planet.webp" alt="planetmhjerter"></div>
</div>

<div><p>Husk på du ikke sidder alene med dine følelser!</p></div>

<div class="streg"><img src="../../img/streg.webp" alt="streg"></div>


<style>
    .container {
    display: grid;
    place-items: center;
    height: 100vh;
    padding: 0 20px; 
}

.planet {
    grid-row: 1;
    grid-column: 1;
    max-width: 40%; 
}

.hj {
    grid-row: 1;
    grid-column: 1;
    z-index: 1;
    max-width: 30%; 
    margin-bottom: 42%;
}

.streg {
    grid-row: 1;
    grid-column: 1;
    max-width: 3%; 
    margin-left: 44.5%;
}

p {
    grid-row: 2;
    grid-column: 1;
    text-align: center; 
}

@media screen and (max-width: 768px) {
    .container {
        grid-template-columns: 1fr; 
    }
    .hj {
    grid-row: 1;
    grid-column: 1;
    z-index: 1;
    max-width: 70%; 
    margin-bottom: 75%;
}
.planet {
    grid-row: 1;
    grid-column: 1;
    max-width: 70%; 
}
.streg {
    grid-row: 1;
    grid-column: 1;
    max-width: 10%; 
    margin-left: 29%;
}

}




</style>