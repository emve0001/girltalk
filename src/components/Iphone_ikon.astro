---
 import MainLayout from "../MainLayout.astro";
---
<section>
<img id="iphone" src="../../public/img/iphone.webp" alt="rød iphone">
<figure id="apps">
    <img id="clock" src="../../public/img/block.webp" alt="ur">
    <img id="besked" src="../../public/img/besked.webp" alt="taleboble">
</figure>
</section>


<style>
    img{
max-width: 100%;
max-height:100%;
width: auto;
height: auto;
max-width: 100%;
    }
section{
    display: grid;
    grid-template-columns: 1fr 1fr 3fr 1fr 1fr;
    position: relative; /* Gør det muligt at positionere billeder relativt til sektionen */

}
section > figure{
    grid-column: 3;
}
#iphone{
   grid-area: 1 / 3 / 2 / 4;
}
    #apps{
        grid-area:  1 / 3 / 2 / 4;
        justify-self: center;
        display: flex;
        flex-direction: row;
        object-fit:cover;
        gap: 5px;
        z-index: 3;
        align-items: center;
    
    }

    #clock {
        transition: transform 5s ease-in-out 10s; /* For langsom overgang */
        animation: clock-animation 15s ease-in-out infinite; /* Animation */
    }

    /* Keyframe-animation for urrotering */
    @keyframes clock-animation {
        0% {
            transform: rotate(0deg); /* Startposition: ingen rotation */
        }
        100% {
            transform: rotate(360deg); /* Slutposition: 360 graders rotation */
        }
    }
    #besked{
        transition: transform 10s ease-in-out 10s;
        animation: myAnim 5s ease-in-out 20s infinite;
        animation-delay: 10s;
    }
        @keyframes myAnim {
	0%,
	100% {
		transform: rotate(0deg);
		transform-origin: 50% 50%;
	}

	10% {
		transform: rotate(8deg);
	}

	20%,
	40%,
	60% {
		transform: rotate(-10deg);
	}

	30%,
	50%,
	70% {
		transform: rotate(10deg);
	}

	80% {
		transform: rotate(-8deg);
	}

	90% {
		transform: rotate(8deg);
	}
}

</style>